-- 1.
data Expr
    = Lit Integer
    | Add Expr Expr
    
eval :: Expr -> Integer
eval (Lit l) = l
eval (Add e1 e2) = (eval e1) + (eval e2)

evalTest = once $ eval (Add (Lit 1) (Lit 9001)) == 9002

-- 2.
printExpr :: Expr -> String
printExpr (Lit l) = show l
printExpr (Add e1 e2) = (printExpr e1) ++ " + " ++ (printExpr e2)

